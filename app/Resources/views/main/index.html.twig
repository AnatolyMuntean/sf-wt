{% extends "base.html.twig" %}

{% block body %}
    <div class="row">
        {% for vendor in vendors %}
            <div class="col-sm-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">{{ vendor.country }} <a href="#">(tech tree)</a></h3>
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="panel panel-default">
                                    <div class="panel-heading">
                                        <h3 class="panel-title">Tanks</h3>
                                    </div>
                                    <div class="panel-body">
                                        <ul>
                                            {% for tank in tanks %}
                                                {% if tank.vendor.id == vendor.id %}
                                                    <li>
                                                        <a href="{{ path('tank_page', {'tank': tank.id}) }}">{{ tank.name }}</a>
                                                    </li>
                                                {% endif %}
                                            {% endfor %}
                                        </ul>
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="panel panel-default">
                                    <div class="panel-heading">
                                        <h3 class="panel-title">Guns</h3>
                                    </div>
                                    <div class="panel-body">
                                        <ul>
                                            {% for gun in guns %}
                                                {% if gun.vendor.id == vendor.id %}
                                                    <li>
                                                        <a href="{{ path('gun_page', {'gun': gun.id}) }}">{{ gun.name }}</a>
                                                    </li>
                                                {% endif %}
                                            {% endfor %}
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
